  kronatools_dir = '/home/people/dinghe/github/Krona/KronaTools/bin'

}

manifest {
  name = 'test1'
  author = 'Ding He'
  description = 'Test 1'
  mainScript = 'test1.nf'
  nextflowVersion = '>=20.10.0'
  version = '0.1'
}

process {

  executor = 'pbs'
  clusterOptions = '--W group_list=ku_00039 -A ku_00039 -m n'

  withLabel: 'single_core' {
    cpus = 1
    memory = '4 GB'
    time = '24h'
  }

  withLabel: 'multi_core' {
    cpus = 40
    memory = '180 GB'
    time = '24h'
  }

}

profiles {

  computerome {

    process.executor = 'pbs'
    process.module = 'tools'

  }

  local {
    process.executor = 'local'
  }

}
